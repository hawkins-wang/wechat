/**顶部图片区域**/
.titleback {
  background: url('https://ss2.bdstatic.com/70cFvnSh_Q1YnxGkpoWK1HF6hhy/it/u=3806034795,2247234921&fm=27&gp=0.jpg');
  width: 100%;
  height: 300rpx;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
  position: relative;
}

.nameContainer {
  position: absolute;
  left: 50%;
  margin-left: -80rpx;
  bottom: 60rpx;
  display: block;
  box-sizing: border-box;
  text-align: center;
}

.titleText{
  color: white;
}

.name {
  font-size: 20px;
}

.job {
  font-size: 15px;
}

.point {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 80rpx;
  height: 80rpx;
  display: block;
}

.whiterec {
  background-color: white;
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  width: 50rpx;
  height: 30rpx;
  display: block;
  box-sizing: border-box;
}

.nocolorrec {
  position: absolute;
  right: 35rpx;
  top: 35rpx;
  width: 50rpx;
  height: 30rpx;
  display: block;
  border:1px solid white;
  box-sizing: border-box;
}

/**中间名片信息、地址**/
.middleContainer {
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  margin: 50rpx;
}

.middleContainer .middleRow {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  flex-basis: 40%;
  margin-bottom: 50rpx;
}

.middleSecondRow {
  margin-top: 50rpx;
}

.middleFirstRow {
  flex-basis: 65%;
}

.middleTextLogo {
  font-size: 30px;
  font-style: bold italic;
}
.middleEnTextLogo {
  font-size: 10px;
}


.middleLeftFirst {
  font-weight:bold;
  font-size: 20px;
  height: 100%;
  vertical-align:bottom;
}

.middleCompany {
  font-size: 18px;
  height: 100%;
  vertical-align:bottom;
}

.middleLeftSecond {
  vertical-align:bottom;
  height: 100%;
  font-style:italic;
  font-size: 15px;
  margin-left: 15rpx;
}

.middleLeftThree {
  vertical-align:bottom;
  height: 100%;
  font-size: 15px;
}

.middleLeftFour {
  vertical-align:bottom;
  height: 100%;
  font-style:italic;
  font-size: 15px;
}

.middleLeftFourth {
  vertical-align:bottom;
  height: 100%;
  font-style:italic;
  font-size: 15px;
  margin-left: 15rpx;
}

.middleImg {
  width: 70rpx;
  height: 70rpx;
}

.separator {
  height:1rpx;
  widows: 100%;
  background-color: #eee;
  margin-left: 1rpx;
  margin-right: 1rpx;
}

.item {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.item .firstText{
  font-size: 15px;
  color: gray;
}
.item .secondText{
  font-size: 15px;
  color: black;
  margin-top: 5rpx;
}

.line {
  height:2rpx;
  widows: 100%;
  background-color: #eee;
  margin-left: 20rpx;
  margin-right: 20rpx;
}


.tab {
  position: absolute;
  width: 100%;
}

.tab .tabRow {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content:space-between;
  align-content: center;
  align-items: center;
}

.tabItem {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  border: 1rpx solid #eee;
  box-sizing: border-box;
}












.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}




.middle {
  position: relative;
  margin: 70rpx;
  height: 150rpx;
  overflow:hidden;
}
