  position: relative;
}

.nameContainer {
  position: absolute;
  left: 50%;
  margin-left: -80rpx;
  bottom: 60rpx;
  display: block;
  box-sizing: border-box;
  text-align: center;
}

.titleText{
  color: white;
}

.name {
  font-size: 20px;
}

.job {
  font-size: 15px;
}

.point {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 80rpx;
  height: 80rpx;
  display: block;
}

.whiterec {
  background-color: white;
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  width: 50rpx;
  height: 30rpx;
  display: block;
  box-sizing: border-box;
}

.nocolorrec {
  position: absolute;
  right: 35rpx;
  top: 35rpx;
  width: 50rpx;
  height: 30rpx;
  display: block;
  border:1px solid white;
  box-sizing: border-box;
}

